pipeline {
    agent any

    environment {
        PLAYWRIGHT_IMAGE = 'mcr.microsoft.com/playwright:v1.50.1-noble'
        DOCKER_NETWORK = 'skynet'
    }

    options {
        timeout(time: 10, unit: 'MINUTES') // evita travamento eterno
    }

    stages {
        stage('Instalar depend√™ncias') {
            steps {
                script {
                    docker.image(env.PLAYWRIGHT_IMAGE).inside("--network ${env.DOCKER_NETWORK}") {
                        sh 'npm ci'
                    }
                }
            }
        }

        stage('Executar testes E2E') {
            steps {
                script {
                    docker.image(env.PLAYWRIGHT_IMAGE).inside("--network ${env.DOCKER_NETWORK}") {
                        sh 'npx playwright test'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'üßπ Pipeline finalizada.'
        }
        success {
            echo '‚úÖ Testes E2E executados com sucesso!'
        }
        failure {
            echo '‚ùå Algo deu errado durante os testes.'
        }
    }
}
