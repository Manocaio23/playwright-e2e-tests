pipeline {
    agent {
        docker {
            image 'mcr.microsoft.com/playwright:v1.41.1-focal'
            args '--network playwrigth-e2e-tests_skynet'
        }
    }

    stages {
        stage('Node.js Deps') {
            steps {
                sh 'npm install'
            }
        }

        stage('E2E Tests') {
            steps {
                sh 'npx playwright test'
            }
        }
    }
}
